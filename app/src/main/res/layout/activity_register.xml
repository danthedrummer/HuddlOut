<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamh.huddleout.RegisterActivity">

    <TextView
        android:text="@string/registerScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationTitle"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register!"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/registrationSubmitButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordField"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="@string/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/passwordText"
        android:layout_below="@+id/usernameField"
        android:layout_alignStart="@+id/passwordField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordField"
        android:layout_below="@+id/passwordText"
        android:layout_alignStart="@+id/usernameField" />

    <TextView
        android:text="@string/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/usernameText"
        android:layout_below="@+id/registrationTitle"
        android:layout_alignStart="@+id/usernameField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameField"
        android:layout_below="@+id/usernameText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrationSubmitButton"
        android:layout_marginTop="36dp"
        android:id="@+id/messageTxt"
        android:layout_alignStart="@+id/passwordField"
        android:layout_alignEnd="@+id/passwordField"
        android:textAlignment="center" />


</RelativeLayout>
