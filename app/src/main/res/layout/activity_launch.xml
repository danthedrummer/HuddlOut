<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_launch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamh.huddleout.LaunchActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/backgroundImage"
            android:visibility="visible"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:alpha="1"
            app:srcCompat="@drawable/city"
            android:src="@drawable/city" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/huddloutlogo_blue"
        android:id="@+id/imageView6"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="200dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        app:srcCompat="@mipmap/huddloutlogo_blue"
        android:tint="@android:color/white"
        android:layout_marginTop="100sp" />

    <TextView
        android:text="Welcome to HuddlOut!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView6"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
