<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamh.huddleout.ProfileActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_marginStart="21dp"
        android:layout_marginTop="23dp"
        android:id="@+id/profileImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Context Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImageView"
        android:id="@+id/topContextButton"
        android:layout_alignEnd="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView" />

    <TextView
        android:text="About Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImageView"
        android:layout_alignStart="@+id/profileImageView"
        android:layout_marginTop="17dp"
        android:id="@+id/aboutTextView"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Example Name"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextView"
        android:layout_width="200dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginStart="21dp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_toEndOf="@+id/profileImageView" />

    <TextView
        android:text="Praesent fringilla, nibh vitae blandit elementum, dolor dui ornare turpis, sed suscipit nibh tellus nec metus. Cras vitae laoreet est. Etiam congue neque id pretium rhoncus. Etiam imperdiet sapien nisi. Suspendisse at ex vel dui consequat iaculis non id nisi. Fusce augue lacus, tempor quis sollicitudin quis"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/aboutTextView"
        android:layout_alignStart="@+id/aboutTextView"
        android:layout_marginTop="13dp"
        android:id="@+id/aboutContentTextView"
        android:layout_alignEnd="@+id/topContextButton" />

</RelativeLayout>
